# Configuración de la aplicación
APP_NAME=Facturación ARCA
DEBUG=true
SECRET_KEY=<YOUR_SECRET_KEY_HERE>

# Base de datos
DATABASE_URL=sqlite+aiosqlite:///./facturacion.db

# Configuración ARCA
# Para modo testing: obtener access_token en https://app.afipsdk.com/
ARCA_CUIT=20409378472
ARCA_PRODUCTION=false
ARCA_ACCESS_TOKEN=<TU_ACCESS_TOKEN>
ARCA_CERT_PATH=certs/certificado.crt
ARCA_KEY_PATH=certs/clave_privada.key
ARCA_PUNTO_VENTA=1

# Datos del emisor (para facturas)
EMISOR_RAZON_SOCIAL=<TU_RAZON_SOCIAL>
EMISOR_DOMICILIO=<TU_DOMICILIO>
EMISOR_CONDICION_IVA=Responsable Inscripto
EMISOR_INGRESOS_BRUTOS=<TU_NRO_IIBB>
EMISOR_INICIO_ACTIVIDADES=<FECHA_INICIO>

# TiendaNube Integration
# Obtener credenciales en https://partners.tiendanube.com
TN_CLIENT_ID=<TU_CLIENT_ID>
TN_CLIENT_SECRET=<TU_CLIENT_SECRET>
TN_REDIRECT_URI=https://tu-backend.onrender.com/api/tiendanube/callback
TN_AUTO_INVOICE=false
TN_DEFAULT_INVOICE_TYPE=6

# Frontend URL (para redirecciones después de OAuth)
FRONTEND_URL=https://tu-frontend.vercel.app
